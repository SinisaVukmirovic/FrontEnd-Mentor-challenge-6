---
import socialLinks from '../data/socialLinks';

const footerLinks = [
    {
        name: 'About',
        href: '/about/'
    },
    {
        name: 'Services',
        href: '/services/'
    },
    {
        name: 'Projects',
        href: '/projects/'
    }
];
---

<footer>
    <p>sunnyside</p>
    <!-- <div class="footer-nav">
        <Nav />
    </div> -->
    <ul class="nav-links">
        {footerLinks.map(link => (
            <li><a href={link.href}>{link.name}</a></li>            
        ))}
    </ul>
    <ul class="soc-links">
        {socialLinks.map(link => (
            <li><a href={link.path}><img src={link.src} alt="Social media icon"></a></li>
        ))}
    </ul>

    <div class="attribution">
        Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank">Frontend Mentor</a>. 
        Coded by <a href="https://github.com/SinisaVukmirovic" target="_blank">Sinisa Vukmirovic</a>.
    </div>
</footer>

<style>
    footer {
        background-color: var(--White);
        text-align: center;
        padding-top: 3rem;
        background-color: var(--footer-bg);
        color: var(--Dark-moderate-cyan);
    }
    footer p {
        font-size: 2.3rem;
        font-weight: 900;
        font-family: var(--fraunces);
    }

    .nav-links,
    .soc-links {
        margin: 3rem auto;
        display: flex;
        justify-content: space-evenly;
        list-style: none;
    }
        ul li a {
            text-decoration: none;
            font-family: var(--barlow);
            color: inherit;
        }
    .nav-links {
        max-width: 20rem;
        font-size: 1.2rem;
        padding-bottom: 2rem;
    }
    .soc-links {
        max-width: 15rem;
    }
    .soc-links img {
        width: 1.25rem;
    }

    .attribution { 
        font-size: .8rem; 
        text-align: center;
        padding: 1rem;
        background-color: var(--Dark-moderate-cyan);
        color: var(--Dark-blue);
    }
    .attribution a { color: var(--footer-bg); }

    @media (min-width: 1440px) {
        .nav-links {
            font-size: 1rem;
        }

        .soc-links img {
            width: 1.1rem;
        }

        .attribution {  
            font-size: 1rem;
        }

        ul a:hover {
            color: var(--White);
        }
        ul a:hover img {
            filter: brightness(5);
        }
    }
</style>