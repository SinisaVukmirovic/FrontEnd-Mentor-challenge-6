---
// import Nav from './Nav.astro';
import socialLinks from '../data/socialLinks';
const footerLinks = [
    {
        name: 'About',
        href: '/about/'
    },
    {
        name: 'Services',
        href: '/services/'
    },
    {
        name: 'Projects',
        href: '/projects/'
    }
];
---

<footer>
    <p>sunnyside</p>
    <!-- <div class="footer-nav">
        <Nav />
    </div> -->
    <ul class="nav-links">
        {footerLinks.map(link => (
            <li><a href={link.href}>{link.name}</a></li>            
        ))}
    </ul>
    <ul class="soc-links">
        {socialLinks.map(link => (
            <li><a href={link.path}><img src={link.src} alt="Social media icon"></a></li>
        ))}
    </ul>
</footer>

<style>
    footer {
        background-color: var(--White);
        text-align: center;
        padding: 3rem 0 4rem;
        background-color: var(--footer-bg);
        color: var(--Dark-moderate-cyan);
    }
    footer p {
        font-size: 2.3rem;
        font-weight: 900;
        font-family: var(--fraunces);
    }

    .nav-links,
    .soc-links {
        display: flex;
        justify-content: space-evenly;
        list-style: none;
        margin-top: 3rem;
    }
        ul li a {
            text-decoration: none;
            font-family: var(--barlow);
            color: inherit;
        }
    .nav-links {
        font-size: 1.2rem;
        padding-bottom: 2rem;
    }
    .soc-links {
        margin-inline: 5rem;
    }
    .soc-links img {
        width: 1.25rem;
    }
</style>